@model Squares.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="form-container">

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "" })
        @Html.TextBoxFor(m => m.Email, new { @id = "username", @class = "feedback-input", @placeholder = "Username" })
        @Html.PasswordFor(m => m.Password, new { @id = "username", @class = "feedback-input", @placeholder = "Password" })
        @Html.PasswordFor(m => m.ConfirmPassword, new { @id = "username", @class = "feedback-input", @placeholder = "Confirm Password" })
        @Html.TextBoxFor(m => m.FirstName, new { @id = "username", @class = "feedback-input", @placeholder = "First name" })
        @Html.TextBoxFor(m => m.LastName, new { @id = "username", @class = "feedback-input", @placeholder = "Last name" })
        <input type="submit" class="btn btn-default" value="Register" />
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</div>