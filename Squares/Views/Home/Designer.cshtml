@model Squares.Models.Set

@{
    ViewBag.Title = "Designer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="designer-comp-title">@Model.Title</h3>
        </div>
        <div class="col-lg-12">
            <dl class="rating-container">
                @for (int i = 0; i < 5; i++)
                {
                    if (i <= Model.Rating)
                    {
                        <dt class="rating-on"></dt>
                    }
                    else
                    {
                        <dt class="rating-off"></dt>
                    }
                }
            </dl>

        </div>
        <div class="col-lg-12">
            <p class="designer-comp-artist">@Model.Artist.Alias</p>
        </div>
        <div id="myCreator" class="col-lg-6">
            <div class="drop-zone">
                <span id="top-left" class="corner"></span>
                <span id="top-right" class="corner"></span>
                <span id="bottom-left" class="corner"></span>
                <span id="bottom-right" class="corner"></span>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="drag-zone">
                @foreach (var item in Model.SetPieces)
                {
                    <div class="dragbox-wrapper">
                        <img src=@Url.Content(item.Url) class="dragbox" data-rotation="0" data-isplaced="no" />
                    </div>
                }
            </div>
        </div>
        <div class="col-lg-12">
            <p class="designer-comp-description-title">Description:</p>
            <p class="designer-comp-description">@Model.Description</p>
        </div>
        <div class="col-lg-12">
            <ul class="preview">
                <li class="preview-shirt"><a href="#"></a></li>
                <li class="preview-wall"><a href="#"></a></li>
            </ul>
            <button class="btn designer-comp-order">Order</button>
        </div>
    </div>
</div>

