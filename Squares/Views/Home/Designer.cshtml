@model Squares.Models.Set

@{
    ViewBag.Title = "Designer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Title</h3>
<span class="artist-name">Artist Name</span>
<dl class="rating-container">
    @for (int i = 0; i < 5; i++)
    {
        if (i <= Model.Rating)
        {
            <dt class="rating-on"></dt>
        }
        else
        {
            <dt class="rating-off"></dt>
        }
    }
</dl>

<div class="designer-container">

    <div id="myCreator" class="designer-grid">
        <div class="drop-zone">
            <span id="top-left" class="corner"></span>
            <span id="top-right" class="corner"></span>
            <span id="bottom-left" class="corner"></span>
            <span id="bottom-right" class="corner"></span>
        </div>
    </div>
    <!----<div class="main-image">
