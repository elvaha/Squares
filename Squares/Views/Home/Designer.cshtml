            <div class="dragbox-wrapper">
                <img class="dragbox" src="~/Content/images/squares/1.jpg" />
            </div>
        </div>
    </div>-->

</div>

<div class="image-gallery drag-zone">
    @foreach (var item in Model.SetPieces)
    {
        <div class="dragbox-wrapper">
            <img src="@item.Url" class="dragbox" data-rotation="0" data-isplaced="no">
        </div>
    }
</div>

