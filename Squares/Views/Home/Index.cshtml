@{
    ViewBag.Title = "Home Page";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 remove-gutter">
            <main class="fold">
                <div class="fold__content">
                    <div class="fold__header">
                        <div>
                            <h1 class="fold__title">Simply square</h1>
                        </div>
                        <div>
                            <p class="fold__subtitle">We hate circles. Click here to find out how to use our designer.</p>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <div class="row gallery">

        @{

            for (var i = 0; i < 9; i++)
            {

                <div class="col-md-6 col-lg-6 col-xl-4">
                    <div class="row set__wrapper">
                        <div class="set">
                            <div class="col-xl-12 remove-gutter">
                                <h2 class="set__title">Set title</h2>
                                <p class="set__author">Author</p>
                                <p class="set__description">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
                            </div>
                            <div class="row">
                                <div class="col-xs-3 col-sm-3 col-md-3">
                                    <img class="set__piece" src="~/Content/images/squares/1.jpg" />
                                </div>
                                <div class="col-xs-3 col-sm-3 col-md-3">
                                    <img class="set__piece" src="~/Content/images/squares/2.jpg" />
                                </div>
                                <div class="col-xs-3 col-sm-3 col-md-3">
                                    <img class="set__piece" src="~/Content/images/squares/3.jpg" />
                                </div>
                                <div class="col-xs-3 col-sm-3 col-md-3">
                                    <img class="set__piece" src="~/Content/images/squares/4.jpg" />
                                </div>
                            </div>
                            <button class="set__btn">Customize</button>
                        </div>
                    </div>
                </div>

            }

        }
    </div>
</div>