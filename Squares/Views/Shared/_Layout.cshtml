<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <nav>
        <ul class="main-navigation">
            <li class="main-navigation__item"><a href="#"><img src="~/Content/images/logo.png"></a></li>
            <li class="main-navigation__item"><a href="#"><img src="~/Content/images/gallery.png"></a></li>
            <li class="main-navigation__item"><a href="#"><img src="~/Content/images/about.png"></a></li>
            <li class="main-navigation__item"><a href="#"><img src="~/Content/images/login.png"></a></li>
        </ul>
        <div id="search-widget" class="search bring-to-front">

                <form class="search__form">

                    <div class="search__type hidden-sm-down bring-to-front">
                        <p class="search__type-text">ARTIST</p>
                    </div>
                    <div class="search__searchbar-wrapper">
                        <input class="search__searchbar" placeholder="Search our collection" type="text" />
                    </div>
                    <img class="search__submit" src="~/Content/images/search-ico.png" />
                    <div class="container-fluid hidden-sm-down search__sort">
                        <div class="row">
                            <div class="col-sm-4 col-md-4 col-lg-4 remove-gutter">
                                <p class="search__sort-item">TOP RATED</p>
                            </div>
                            <div class="col-sm-4 col-md-4 col-lg-4 remove-gutter">
                                <p class="search__sort-item">MOST VIEWED</p>
                            </div>
                            <div class="col-sm-4 col-md-4 col-lg-4 remove-gutter">
                                <p class="search__sort-item">NEWEST</p>
                            </div>
                        </div>
                    </div>

                </form>
                    
            </div>

    </nav>

    @RenderBody()

    <button class="v">V</button>
    <button class="h">H</button>
    <button class="f">F</button>

    <footer class="footer"></footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
