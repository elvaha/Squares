<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class=@ViewBag.Class>
    
    <div class="wrapper">
        <nav>
            <ul>
                <li class="logo"><a href="/Home/Index"><img src="~/Content/images/logo.png"></a></li>
                <li class="gallery"><a href="/Home/Gallery"></a></li>
                <li class="search"><a href="#"></a></li>
                <li class="about"><a href="/Home/About"></a></li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="profile"><a href="/account/profile"></a></li>
                    <li class="logoff"><a href="/account/logoff"></a></li>
                }
                else
                {
                    <li class="user"><a></a></li>
                }
            </ul>
            <p>@User.Identity.Name</p>
        </nav>
        <div class="inner-wrapper">

                @RenderBody()

            <footer>
                <ul>
                    <li>
                        <ul class="social-media">
                            <li class="social-fb"><a href="#"></a></li>
                            <li class="social-tw"><a href="#"></a></li>
                            <li class="social-gplus"><a href="#"></a></li>
                            <li class="social-instagr"><a href="#"></a></li>
                        </ul>
                    </li>
                    <li>
                        <ul class="footer-nav">
                            <li><a href="#">Home</a></li>
                            <li><a href="#">Gallery</a></li>
                            <li><a href="#">About Us</a></li>
                        </ul>
                    </li>
                    <li>
                        <span>&copy; Copyright 2016</span>
                    </li>
                </ul>
            </footer>
        </div>
    </div>

    


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
