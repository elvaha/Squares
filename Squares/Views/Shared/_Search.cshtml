@model Squares.Models.searchModel

@{ 
    List<string> dropdownOptions = new List<string>();

    dropdownOptions.Add("ARTIST");
    dropdownOptions.Add("SETS");

    SelectList searchPlaces = new SelectList(dropdownOptions);
}
<div id="search-widget" class="search bring-to-front">
    @using (Html.BeginForm("Gallery", "Home", FormMethod.Post, new { @class = "search__form" })) {
        <div class="search__type hidden-sm-down">
            @*@Html.DropDownListFor(x => x.searchPlace, searchPlaces)*@
            <p class="search__type-text">Artist</p>
        </div>
        <div class="search__searchbar-wrapper">
            @Html.TextBoxFor(x => x.searchParam, new { @id = "searchParam", @name = "searchParam", @class = "search__searchbar", @placeholder = "Search our gallery" })
        </div>
        <input type="image" src="~/Content/images/search-ico.png" class="search__submit" alt="search-btn"/>
        @*<img class="search__submit src="~/Content/images/search-ico.png" />*@ 
    }
    <div class="hidden-sm-down search__sort @if (ViewBag.Class == "index" || ViewBag.Class == "about") { @Html.Raw("hidden") }">
        <div class="">
            @Html.ActionLink("Top Rated", "Gallery", "Home", new { sort = "RATING" }, new { @class = "search__sort-item" })
        </div>
        <div class="">
            @Html.ActionLink("Most Viewed", "Gallery", "Home", new { sort = "VIEWS" }, new { @class = "search__sort-item" })
        </div>
        <div class="">
            @Html.ActionLink("Newest", "Gallery", "Home", new { sort = "NEW" }, new { @class = "search__sort-item" })
        </div>
    </div>
</div>
