@using SquaresAdmin.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}



<div class="login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="../../index2.html"><b>Squares Admin</b></a>
        </div>

        <div class="login-box-body">
            <p class="login-box-msg">Only for administration usage</p>

            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "" })

                <div class="form-item">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                    <span class="ion-email form-control-feedback"></span>
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "" })
                </div>

                <div class="form-item">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control form-item", @placeholder = "Password" })
                    <span class="ion-locked form-control-feedback"></span>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "" })
                </div>
                <div class="form-item">
                    @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox-label" })
                    @Html.CheckBoxFor(m => m.RememberMe)
                </div>
                <input type="submit" value="Sign In" class="btn btn-primary btn-block btn-flat" />

            }

        </div>

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}